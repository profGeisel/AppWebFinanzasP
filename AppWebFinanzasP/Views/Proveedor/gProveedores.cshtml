
@{
    ViewBag.Title = "gProveedores";
}

<div class="">
    <h2><strong>Categorías</strong></h2>
    <br />
</div>
<!--Formulario para registro de categorias-->
<div class="container">

    <form action="#">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group form-group-sm">
                    <label for="categoria" class="control-label">Proveedor</label>
                    <input type="text" class="form-control" id="proveedor" placeholder="Nombre del Proveedor">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-1 ">
                <button type="submit" class="btn btn-primary ">Agregar</button>
            </div>
        </div>
    </form>
</div>

<!-- Tabla de gestion de categorias-->

<div class="container">
    <div class="row">


        <div class="col-sm-10 text-sm-center">
            <h4>Proveedores Registrados</h4>
            <div class="table-responsive">


                <table id="mytable" class="table table-bordred table-striped ">

                    <thead>

                    <th class="table-dark"><input type="checkbox" id="checkall" /></th>
                    <th class="table-dark">Id_Proveedor</th>
                    <th class="table-dark">Nombre del Proveedor</th>
                    <th class="table-dark">Editar</th>
                    <th class="table-dark">Eliminar</th>
                    </thead>
                    <tbody>

                        <tr>
                            <td><input type="checkbox" class="checkthis" /></td>
                            <td>1</td>
                            <td>BNCR</td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                        </tr>

                        <tr>
                            <td><input type="checkbox" class="checkthis" /></td>
                            <td>2</td>
                            <td>BCR</td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                        </tr>

                        <tr>
                            <td><input type="checkbox" class="checkthis" /></td>
                            <td>3</td>
                            <td>BAC</td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                        </tr>

                        <tr>
                            <td><input type="checkbox" class="checkthis" /></td>
                            <td>4</td>
                            <td>Scotiabanck</td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                        </tr>
                                               
                    </tbody>

                </table>

                <div class="clearfix"></div>
                <ul class="pagination pull-right">
                    <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
